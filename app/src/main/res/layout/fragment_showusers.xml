<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showusers">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/my_background"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"


        >



        <EditText
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="USER: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/ET_user"
            >
        </EditText>

        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text="SCORE: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/TV_score"
        >

        </TextView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="RATING: "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/TV_rating"

            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="ADD PICTURE"
            android:id="@+id/Btn_addPicture"
            android:backgroundTint="#39933C"
            >

        </Button>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ImgV_imageView"
            >

        </ImageView>

        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="ADD USER"
            android:backgroundTint="#B14320"
            android:id="@+id/Btn_addUser"
            >
        </Button>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcShowUsers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/activity_login"
            />



    </LinearLayout>

    </LinearLayout>


</FrameLayout>